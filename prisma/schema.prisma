generator client {
  provider = "prisma-client-js"
  seed     = "ts-node prisma/seed.ts"
  output   = "../src/lib/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  items         Item[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

enum ItemType {
  VIDEO
  PDF
  AUDIO
  DOCUMENT
  IMAGE
}

model Item {
  id        String    @id @default(nanoid(8))
  name      String
  fileUrl   String
  type      ItemType
  expiresAt DateTime?
  // The password is used to protect the item
  password  String?
  // The price is defined in USD
  price     Int?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("item")
}

model Feature {
  name      String @unique
  planId    Int
  plan      Plan @relation(fields: [planId], references: [id]) 
}

enum PlanType {
  FREE
  IRON
  GOLD
}

model Plan {
  id          Int   @id @default(autoincrement()) @unique
  name        String @unique
  type        ItemType
  fileLimit   Int
  price       Int
  features    Feature[] 
}